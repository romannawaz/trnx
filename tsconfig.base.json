{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@trnx/client/content/home/page": [
        "libs/client/content/home/page/src/index.ts"
      ],
      "@trnx/client/ui/container": ["libs/client/ui/container/src/index.ts"],
      "@trnx/client/ui/layout": ["libs/client/ui/layout/src/index.ts"],
      "@trnx/core/api/interceptors/content-type": [
        "libs/core/api/interceptors/content-type/src/index.ts"
      ],
      "@trnx/core/api/interceptors/with-credentials": [
        "libs/core/api/interceptors/with-credentials/src/index.ts"
      ],
      "@trnx/core/api/service": ["libs/core/api/service/src/index.ts"],
      "@trnx/core/common": ["libs/core/common/src/index.ts"],
      "@trnx/core/config/service": ["libs/core/config/service/src/index.ts"],
      "@trnx/core/environments/service": [
        "libs/core/environments/service/src/index.ts"
      ],
      "@trnx/core/store/root": ["libs/core/store/root/src/index.ts"],
      "@trnx/core/store/utils": ["libs/core/store/utils/src/index.ts"],
      "@trnx/news/api/service": ["libs/news/api/service/src/index.ts"],
      "@trnx/news/common": ["libs/news/common/src/index.ts"],
      "@trnx/news/store": ["libs/news/store/src/index.ts"],
      "@trnx/ui/styles": ["libs/ui/styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
